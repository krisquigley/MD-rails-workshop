<%= link_to 'Add Post', new_post_path, class: 'btn btn-primary' %>
<ul>
  <% posts.each do |post| %>
    <li><%= link_to post.title, post_path(post) %> - <%= link_to 'Edit', edit_post_path(post), class: 'btn btn-warning' %>
    <%= link_to 'Destroy', post_path(post), class: 'btn btn-danger', method: :delete %></li>
  <% end %>
</ul>