<section> 
	<h5 class="text-center"> 
		Here you can make a post, which you which in the categories available. 
	</h5>
	<br/><br/>
	<!-- Form to create the post -->
	<%= form_for post do |f| %>
		<div class="form-group">
		    <%= f.label 'Title of the post' %>
		    <%= f.text_area :title, class: "form-control" %>
		</div>
		<div class="form-group">
		    <%= f.label 'Content of the post' %>
		    <%= f.text_area :body, class: "form-control" %>
		</div>
		<div class="form-group">
		    <%= f.label 'Category of the post' %>
		    <%= f.collection_select(:category_id, categories, :id, :name, :prompt => 'Select category') %>
    	</div>
    	<div class="form-group">
		    <%= f.label 'Do you want to publish this post' %>
		    <div class="field">
			    <%= f.radio_button :published, true %> Yes<br />
    			<%= f.radio_button :published, false %> No <br />
			</div>
		</div>
	  	<%= f.submit class: 'btn btn-primary' %>
	<% end %>
</section>