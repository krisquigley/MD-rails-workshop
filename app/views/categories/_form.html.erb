<% category.errors.full_messages.each do |error_message| %>
	<div class="alert warning">
		<%= error_message %>
	</div>
<% end %>

<%= form_for category do |f| %>
  <div class="form-group">
    <%= f.label :name %>
    <%= f.text_field :name, class: "form-control" %>
  </div>
  <%= f.submit class: 'btn btn-primary' %>
<% end %>