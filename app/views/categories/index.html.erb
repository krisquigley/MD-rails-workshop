<%= link_to 'Add Category', new_category_path, class: 'btn btn-primary' %>

<ul>
	<% categories.each do |category| %>
		<li>
			<%= link_to category.name, category_path(category) %>
			<%= link_to "Edit", edit_category_path(category), class: "btn btn-default" %>
			<%= link_to("Delete", category_path(category), method: :delete, class: "btn btn-default") %>
		</li>

	<% end %>
</ul>