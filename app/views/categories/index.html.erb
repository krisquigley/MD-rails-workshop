<%= link_to 'Add Category', new_category_path, class: 'btn btn-primary' %>

<ul>
<% categories.each do |category| %>
  <li><%= link_to category.name, category_path(category) %> - <%= link_to 'Edit', edit_category_path(category), class: 'btn btn-warning' %>
    <%= link_to 'Destroy', category_path(category), class: 'btn btn-danger', method: :delete %></li>
<% end %>
</ul>